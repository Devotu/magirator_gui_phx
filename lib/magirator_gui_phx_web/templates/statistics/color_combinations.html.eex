      <div class="list-item quarter <%=DisplayHelper.color(c.second)%>"></div>
      <div class="list-item quarter <%=DisplayHelper.color(c.third)%>"></div>
      <div class="list-item quarter <%=DisplayHelper.color(c.fourth)%>"></div>
    </div>
  <% end %>
</div>

<h4 class="list-title sub">All</h4>
<div class='list'>
  <%= for c <- @color_combinations.pentas do %>
    <div class="list-item split">
      <p class="fact absolute"><%= c.count %></p>
      <div class="list-item quarter <%=DisplayHelper.color(c.first)%>"></div>
      <div class="list-item fifth <%=DisplayHelper.color(c.second)%>"></div>
      <div class="list-item fifth <%=DisplayHelper.color(c.third)%>"></div>
