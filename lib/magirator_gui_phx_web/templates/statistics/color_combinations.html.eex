<h3 class="list-title">Color combination</h3>

<h4 class="list-title sub">Mono</h4>
<div class='list'>
  <%= for c <- @color_combinations.monos do %>
    <div class="list-item <%=DisplayHelper.color(c.first)%>">
      <p class="fact"><%= c.count %></p>
    </div>
  <% end %>
</div>

<h4 class="list-title sub">Dual</h4>
<div class='list'>
  <%= for c <- @color_combinations.duals do %>
    <div class="list-item split">
      <p class="fact absolute"><%= c.count %></p>
      <div class="list-item half <%=DisplayHelper.color(c.first)%>"></div>
      <div class="list-item half <%=DisplayHelper.color(c.second)%>"></div>
    </div>
  <% end %>
</div>

<h4 class="list-title sub">Triplets</h4>
<div class='list'>
  <%= for c <- @color_combinations.triplets do %>
    <div class="list-item split">
      <p class="fact absolute"><%= c.count %></p>
      <div class="list-item third <%=DisplayHelper.color(c.first)%>"></div>
      <div class="list-item third <%=DisplayHelper.color(c.second)%>"></div>
      <div class="list-item third <%=DisplayHelper.color(c.third)%>"></div>
    </div>
  <% end %>
</div>

<h4 class="list-title sub">Quads</h4>
<div class='list'>
