<h3>Ratings</h3>

<table>
  <thead>
    <tr>
      <th>P-Diff (no cap)</th>
      <th>P-Diff (cap 3)</th>
      <th>P-Dist+ (2)</th>
      <th>P-Dist (2)</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="<%= DisplayHelper.red_ink(@rating_data.pdiff) %>"><%= @rating_data.pdiff %></td>
      <td class="<%= DisplayHelper.red_ink(@rating_data.pdiff) %>"><%= @rating_data.pdiff3 %></td>
      <td class="<%= DisplayHelper.red_ink(@rating_data.pdiff) %>"><%= @rating_data.pdist2positive %></td>
      <td class="<%= DisplayHelper.red_ink(@rating_data.pdiff) %>"><%= @rating_data.pdist2 %></td>
    </tr>
  </tbody>
</table>
