<div class='content'>
  <div class='list'>
    <%= for deck <- @decks do %>
      <%= button(deck.name, to: deck_path(@conn, :show, deck.id), method: "get", class: "button border list-item") %>
    <% end %>
  </div>
</div>

<div class='menu'>
  <div class='button-plaque'>
    <h4 class='page-title'>Decks</h4>
  </div>
  <%= button("Main", to: main_path(@conn, :main), method: "get", class: "button border back-button") %>
  <%= render(MagiratorGuiPhxWeb.MainView, "options.html", %{conn: @conn}) %>
</div>